<Window x:Class="Farmacia.UI.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Farmacia" Height="720" Width="1180"
        WindowStartupLocation="CenterScreen"
        MinHeight="600"
        MinWidth="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}" Padding="20" CornerRadius="0,16,16,0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,24">
                    <TextBlock Text="Farmacia" FontSize="32" FontWeight="Bold" Foreground="White" />
                    <TextBlock Text="Sistema integral" Style="{StaticResource CaptionStyle}" Foreground="#E6FFFA" />
                </StackPanel>

                <ListBox ItemsSource="{Binding NavigationItems}" SelectedItem="{Binding SelectedNavigation, Mode=TwoWay}" BorderThickness="0" Background="Transparent">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Margin" Value="0,4" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="ItemBorder" Background="Transparent" CornerRadius="10">
                                            <ContentPresenter Margin="0" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#2C7A7B" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#38B2AC" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding Command}" Background="Transparent" BorderThickness="0" Foreground="White" Padding="12" HorizontalContentAlignment="Stretch">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Icon}" FontSize="20" Margin="0,0,12,0" />
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1" Background="{StaticResource SurfaceAltBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Background="White" Padding="24" BorderBrush="{StaticResource SeparatorBrush}" BorderThickness="0,0,0,1">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <TextBlock Text="{Binding WelcomeMessage}" FontSize="20" FontWeight="Bold" />
                    </StackPanel>
                </DockPanel>
            </Border>

            <Border Grid.Row="1" Margin="24" Padding="0" Background="Transparent">
                <ContentControl Content="{Binding CurrentView}" />
            </Border>
        </Grid>
    </Grid>
</Window>
