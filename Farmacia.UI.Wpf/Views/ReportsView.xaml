<UserControl x:Class="Farmacia.UI.Wpf.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d">
    <UserControl.Resources>
        <SolidColorBrush x:Key="ReportsAccentBrush" Color="#2563EB" />
        <SolidColorBrush x:Key="ReportsAccentAltBrush" Color="#1D4ED8" />
        <SolidColorBrush x:Key="ReportsAccentSoftBrush" Color="#BFDBFE" />

        <LinearGradientBrush x:Key="ReportsHeroBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#EFF6FF" Offset="0" />
            <GradientStop Color="#FFFFFF" Offset="1" />
        </LinearGradientBrush>

        <Style x:Key="ReportsLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource CaptionStyle}">
            <Setter Property="Foreground" Value="{StaticResource NeutralDarkBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,14,0,4" />
        </Style>

        <Style x:Key="ReportsBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Background" Value="#DBEAFE" />
            <Setter Property="BorderBrush" Value="{StaticResource ReportsAccentBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,0,12,12" />
        </Style>

        <Style x:Key="ReportsMetricCardStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
            <Setter Property="Padding" Value="24" />
            <Setter Property="CornerRadius" Value="22" />
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1A1C33" BlurRadius="22" ShadowDepth="8" Opacity="0.08" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ReportsMetricLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="#475569" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="ReportsMetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="{StaticResource NeutralDarkBrush}" />
            <Setter Property="Margin" Value="0,8,0,4" />
        </Style>

        <Style x:Key="ReportsCalloutStyle" TargetType="Border">
            <Setter Property="Background" Value="#F8FAFF" />
            <Setter Property="CornerRadius" Value="18" />
            <Setter Property="Padding" Value="18" />
            <Setter Property="BorderBrush" Value="{StaticResource SeparatorBrush}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </UserControl.Resources>
    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="24,16,24,40">
                <Border Background="{StaticResource ReportsHeroBrush}"
                        CornerRadius="30"
                        Padding="32"
                        Margin="0,0,0,28">
                    <Border.Effect>
                        <DropShadowEffect Color="#1A1C33" BlurRadius="26" ShadowDepth="10" Opacity="0.08" />
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.7*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Reportes"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource NeutralDarkBrush}" />
                            <TextBlock Text="Analiza ventas, comparte entregables y mantén al equipo alineado."
                                       Style="{StaticResource CaptionStyle}"
                                       Margin="0,12,0,20"
                                       TextWrapping="Wrap" />
                            <WrapPanel Margin="0,0,0,20">
                                <Border Style="{StaticResource ReportsBadgeStyle}">
                                    <TextBlock Text="{Binding StartDate, Converter={StaticResource DateOnlyConverter}, StringFormat='Inicio {0:dd MMM yyyy}'}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ReportsAccentAltBrush}" />
                                </Border>
                                <Border Style="{StaticResource ReportsBadgeStyle}" Margin="12,0,0,12">
                                    <TextBlock Text="{Binding EndDate, Converter={StaticResource DateOnlyConverter}, StringFormat='Cierre {0:dd MMM yyyy}'}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ReportsAccentAltBrush}" />
                                </Border>
                                <Border Style="{StaticResource ReportsBadgeStyle}"
                                        Background="#DBEAFE"
                                        BorderBrush="Transparent"
                                        Margin="12,0,0,12">
                                    <TextBlock Text="{Binding RequestedBy, StringFormat='Responsable {0}'}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ReportsAccentBrush}" />
                                </Border>
                            </WrapPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Actualizar resumen"
                                        Command="{Binding RefreshMetricsCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Height="42"
                                        MinWidth="170"
                                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
                                <Button Content="Exportar ventas (PDF)"
                                        Command="{Binding ExportSalesSummaryCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Height="42"
                                        Margin="12,0,0,0"
                                        MinWidth="190"
                                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
                                <Button Content="Exportar inventario (CSV)"
                                        Command="{Binding ExportInventoryCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Height="42"
                                        Margin="12,0,0,0"
                                        MinWidth="200"
                                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
                            </StackPanel>
                        </StackPanel>

                        <Border Grid.Column="1"
                                Background="#FFFFFF"
                                CornerRadius="24"
                                Padding="24"
                                Margin="28,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect Color="#1A1C33" BlurRadius="20" ShadowDepth="8" Opacity="0.06" />
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Indicadores clave"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource NeutralDarkBrush}" />
                                <Separator Margin="0,12,0,18" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse Width="10" Height="10" Fill="{StaticResource ReportsAccentBrush}" VerticalAlignment="Center" />
                                    <TextBlock Text="Ventas"
                                               Margin="8,0,0,0"
                                               Foreground="#6B7280" />
                                    <TextBlock Text="{Binding MetricsTotalSales, StringFormat='{}{0:C}'}"
                                               FontWeight="SemiBold"
                                               Margin="16,0,0,0"
                                               Foreground="{StaticResource ReportsAccentAltBrush}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse Width="10" Height="10" Fill="{StaticResource SuccessBrush}" VerticalAlignment="Center" />
                                    <TextBlock Text="Tickets emitidos"
                                               Margin="8,0,0,0"
                                               Foreground="#6B7280" />
                                    <TextBlock Text="{Binding MetricsSaleCount}"
                                               FontWeight="SemiBold"
                                               Margin="16,0,0,0"
                                               Foreground="{StaticResource SuccessBrush}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="10" Height="10" Fill="{StaticResource DangerBrush}" VerticalAlignment="Center" />
                                    <TextBlock Text="Ticket promedio"
                                               Margin="8,0,0,0"
                                               Foreground="#6B7280" />
                                    <TextBlock Text="{Binding MetricsAverageTicket, StringFormat='{}{0:C}'}"
                                               FontWeight="SemiBold"
                                               Margin="16,0,0,0"
                                               Foreground="{StaticResource DangerBrush}" />
                                </StackPanel>
                                <ProgressBar Margin="0,22,0,0"
                                             Height="6"
                                             Minimum="0"
                                             Maximum="1"
                                             IsIndeterminate="True"
                                             Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <Grid Margin="0,0,0,28">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.6*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="#FFFFFF"
                            CornerRadius="26"
                            Padding="28"
                            BorderBrush="{StaticResource SeparatorBrush}"
                            BorderThickness="1"
                            Margin="0,0,22,0">
                        <StackPanel>
                            <TextBlock Text="Configura el periodo"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource NeutralDarkBrush}" />
                            <TextBlock Text="Selecciona fechas, revisa responsable y deja listo el reporte para exportar."
                                       Style="{StaticResource CaptionStyle}"
                                       Margin="0,6,0,20"
                                       TextWrapping="Wrap" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.1*" />
                                    <ColumnDefinition Width="1.1*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Fecha inicio" Style="{StaticResource ReportsLabelStyle}" />
                                    <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay, Converter={StaticResource DateOnlyConverter}}"
                                                Margin="0,6,0,0"
                                                Padding="6" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="24,0,0,0">
                                    <TextBlock Text="Fecha fin" Style="{StaticResource ReportsLabelStyle}" />
                                    <DatePicker SelectedDate="{Binding EndDate, Mode=TwoWay, Converter={StaticResource DateOnlyConverter}}"
                                                Margin="0,6,0,0"
                                                Padding="6" />
                                </StackPanel>
                                <Border Grid.Column="2"
                                        Style="{StaticResource ReportsCalloutStyle}"
                                        Margin="24,22,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Responsable" Style="{StaticResource CaptionStyle}" />
                                        <TextBlock Text="{Binding RequestedBy}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource NeutralDarkBrush}" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1"
                            Background="#FFFFFF"
                            CornerRadius="26"
                            Padding="28"
                            BorderBrush="{StaticResource SeparatorBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Buenas prácticas"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource NeutralDarkBrush}" />
                            <TextBlock Text="Mantén la trazabilidad y obtén reportes consistentes."
                                       Style="{StaticResource CaptionStyle}"
                                       Margin="0,6,0,16"
                                       TextWrapping="Wrap" />
                            <ItemsControl>
                                <ItemsControl.ItemsSource>
                                    <x:Array Type="sys:String">
                                        <sys:String>Actualiza el resumen antes de exportar.</sys:String>
                                        <sys:String>Valida el rango de fechas con el equipo.</sys:String>
                                        <sys:String>Guarda los archivos en la carpeta compartida.</sys:String>
                                    </x:Array>
                                </ItemsControl.ItemsSource>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <Ellipse Width="6" Height="6" Fill="{StaticResource ReportsAccentBrush}" Margin="0,6,8,0" />
                                            <TextBlock Text="{Binding}" Style="{StaticResource CaptionStyle}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid Margin="0,0,0,28">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.6*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="#FFFFFF"
                            CornerRadius="26"
                            Padding="28"
                            BorderBrush="{StaticResource SeparatorBrush}"
                            BorderThickness="1"
                            Margin="0,0,22,0">
                        <StackPanel>
                            <TextBlock Text="Tendencia de ventas"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource NeutralDarkBrush}" />
                            <TextBlock Text="Identifica picos y días lentos para ajustar promociones o staffing."
                                       Style="{StaticResource CaptionStyle}"
                                       Margin="0,6,0,18"
                                       TextWrapping="Wrap" />
                            <ItemsControl ItemsSource="{Binding SalesTrendPoints}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F8FAFF"
                                                BorderBrush="{StaticResource SeparatorBrush}"
                                                BorderThickness="1"
                                                CornerRadius="16"
                                                Padding="16"
                                                Margin="0,0,0,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="160" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Date, StringFormat='{}{0:ddd dd MMM}'}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource NeutralDarkBrush}" />
                                                    <TextBlock Text="{Binding TicketCount, StringFormat='Boletos {0}'}"
                                                               Style="{StaticResource CaptionStyle}" />
                                                </StackPanel>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Ingresos"
                                                               Style="{StaticResource CaptionStyle}" />
                                                    <TextBlock Text="{Binding TotalSales, StringFormat='{}{0:C}'}"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource ReportsAccentAltBrush}" />
                                                </StackPanel>
                                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                                    <TextBlock Text="Ticket promedio"
                                                               Style="{StaticResource CaptionStyle}" />
                                                    <TextBlock Text="{Binding AverageTicket, StringFormat='{}{0:C}'}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource NeutralDarkBrush}" />
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Text="Aún no hay ventas registradas en este periodo."
                                       Margin="0,12,0,0"
                                       Foreground="#6B7280">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CaptionStyle}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SalesTrendPoints.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1"
                            Background="#FFFFFF"
                            CornerRadius="26"
                            Padding="28"
                            BorderBrush="{StaticResource SeparatorBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Productos destacados"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource NeutralDarkBrush}" />
                            <TextBlock Text="Revisa artículos con mayor contribución para reforzar inventario y pricing."
                                       Style="{StaticResource CaptionStyle}"
                                       Margin="0,6,0,18"
                                       TextWrapping="Wrap" />
                            <DataGrid ItemsSource="{Binding TopProducts}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      RowHeight="56"
                                      Margin="0,0,0,12"
                                      BorderThickness="0"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Producto" Binding="{Binding ProductName}" Width="2*" />
                                    <DataGridTextColumn Header="Cantidad" Binding="{Binding QuantitySold, StringFormat='{}{0:N2}'}" Width="*" />
                                    <DataGridTextColumn Header="Ingresos" Binding="{Binding Revenue, StringFormat='{}{0:C}'}" Width="*" />
                                    <DataGridTemplateColumn Header="Margen" Width="1.2*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding MarginImpact, StringFormat='{}{0:C}'}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{StaticResource SuccessBrush}" />
                                                    <TextBlock Text="{Binding MarginPercent, StringFormat='{}{0:N1}%'}"
                                                               Style="{StaticResource CaptionStyle}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Desc. prom"
                                                       Binding="{Binding AverageDiscountPercent, StringFormat='{}{0:N1}%'}"
                                                       Width="*" />
                                    <DataGridTextColumn Header="Precio prom"
                                                       Binding="{Binding AverageUnitPrice, StringFormat='{}{0:C}'}"
                                                       Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock Text="Aún no hay movimientos para calcular ranking."
                                       Foreground="#6B7280">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource CaptionStyle}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TopProducts.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Background="#FFFFFF"
                        CornerRadius="26"
                        Padding="28"
                        BorderBrush="{StaticResource SeparatorBrush}"
                        BorderThickness="1"
                        Margin="0,0,0,28">
                    <StackPanel>
                        <TextBlock Text="Insights de precios"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource NeutralDarkBrush}" />
                        <TextBlock Text="Evalúa márgenes, descuentos y dispersión para ajustar la estrategia comercial."
                                   Style="{StaticResource CaptionStyle}"
                                   Margin="0,6,0,20"
                                   TextWrapping="Wrap" />
                        <UniformGrid Columns="3" Rows="2" Margin="0,0,0,12">
                            <Border Style="{StaticResource ReportsCalloutStyle}" Background="#EEF2FF" Margin="0,0,18,18">
                                <StackPanel>
                                    <TextBlock Text="Ingresos totales" Style="{StaticResource CaptionStyle}" />
                                    <TextBlock Text="{Binding PricingInsights.TotalRevenue, StringFormat='{}{0:C}', TargetNullValue='N/D'}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource ReportsAccentAltBrush}" />
                                    <TextBlock Text="Costo de mercancía" Style="{StaticResource CaptionStyle}" Margin="0,10,0,0" />
                                    <TextBlock Text="{Binding PricingInsights.TotalCost, StringFormat='{}{0:C}', TargetNullValue='N/D'}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource NeutralDarkBrush}" />
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource ReportsCalloutStyle}" Background="#ECFDF5" Margin="0,0,18,18">
                                <StackPanel>
                                    <TextBlock Text="Margen bruto" Style="{StaticResource CaptionStyle}" />
                                    <TextBlock Text="{Binding PricingInsights.GrossMargin, StringFormat='{}{0:C}', TargetNullValue='N/D'}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource SuccessBrush}" />
                                    <TextBlock Text="Margen %" Style="{StaticResource CaptionStyle}" Margin="0,10,0,0" />
                                    <TextBlock Text="{Binding PricingInsights.GrossMarginPercent, StringFormat='{}{0:N1}%'}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource SuccessBrush}" />
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource ReportsCalloutStyle}" Background="#FFF7ED" Margin="0,0,0,18">
                                <StackPanel>
                                    <TextBlock Text="Descuento promedio" Style="{StaticResource CaptionStyle}" />
                                    <TextBlock Text="{Binding PricingInsights.AverageDiscountPercent, StringFormat='{}{0:N1}%'}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource WarningBrush}" />
                                    <TextBlock Text="Dispersión de precios" Style="{StaticResource CaptionStyle}" Margin="0,10,0,0" />
                                    <TextBlock Text="{Binding PricingInsights.PriceSpread, StringFormat='{}{0:C}'}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource WarningBrush}" />
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource ReportsCalloutStyle}" Background="#FFFFFF" Margin="0,0,18,0">
                                <StackPanel>
                                    <TextBlock Text="Precio promedio" Style="{StaticResource CaptionStyle}" />
                                    <TextBlock Text="{Binding PricingInsights.AverageUnitPrice, StringFormat='{}{0:C}'}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource NeutralDarkBrush}" />
                                    <TextBlock Text="Costo promedio" Style="{StaticResource CaptionStyle}" Margin="0,10,0,0" />
                                    <TextBlock Text="{Binding PricingInsights.AverageUnitCost, StringFormat='{}{0:C}'}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource NeutralDarkBrush}" />
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource ReportsCalloutStyle}" Background="#FFFFFF" Margin="0,0,18,0">
                                <StackPanel>
                                    <TextBlock Text="Margen por unidad" Style="{StaticResource CaptionStyle}" />
                                    <TextBlock Text="{Binding PricingInsights.AverageUnitMargin, StringFormat='{}{0:C}'}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource SuccessBrush}" />
                                    <TextBlock Text="Referencia" Style="{StaticResource CaptionStyle}" Margin="0,10,0,0" />
                                    <TextBlock Text="Compara contra la meta mensual para ajustes finos."
                                               Style="{StaticResource CaptionStyle}" />
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource ReportsCalloutStyle}" Background="#EEF2FF">
                                <StackPanel>
                                    <TextBlock Text="Acción sugerida" Style="{StaticResource CaptionStyle}" />
                                    <TextBlock Text="Prioriza productos con alto margen y baja dispersión de precios para campañas."
                                               Style="{StaticResource CaptionStyle}"
                                               TextWrapping="Wrap"
                                               Margin="0,6,0,0" />
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="#FFFFFF"
                            CornerRadius="24"
                            Padding="28"
                            BorderBrush="{StaticResource SeparatorBrush}"
                            BorderThickness="1"
                            Margin="0,0,22,0">
                        <StackPanel>
                            <TextBlock Text="Centro de exportación"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource NeutralDarkBrush}" />
                            <TextBlock Text="Genera entregables con un clic y distribúyelos a tus equipos."
                                       Style="{StaticResource CaptionStyle}"
                                       Margin="0,6,0,20"
                                       TextWrapping="Wrap" />

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0"
                                        Grid.Column="0"
                                        Style="{StaticResource ReportsCalloutStyle}"
                                        Background="#EEF2FF"
                                        Margin="0,0,18,18">
                                    <StackPanel>
                                        <TextBlock Text="Ventas (PDF)" Style="{StaticResource CaptionStyle}" />
                                        <TextBlock Text="{Binding MetricsTotalSales, StringFormat='Total {0:C}'}"
                                                   Style="{StaticResource CaptionStyle}" />
                                        <Button Content="Exportar ventas"
                                                Command="{Binding ExportSalesSummaryCommand}"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Height="40"
                                                Margin="0,14,0,0"
                                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="0"
                                        Grid.Column="1"
                                        Style="{StaticResource ReportsCalloutStyle}"
                                        Background="#ECFDF5"
                                        Margin="18,0,0,18">
                                    <StackPanel>
                                        <TextBlock Text="Inventario (CSV)" Style="{StaticResource CaptionStyle}" />
                                        <TextBlock Text="Corte diario" Style="{StaticResource CaptionStyle}" />
                                        <Button Content="Exportar inventario"
                                                Command="{Binding ExportInventoryCommand}"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Height="40"
                                                Margin="0,14,0,0"
                                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        Style="{StaticResource ReportsCalloutStyle}"
                                        Background="#FFF7ED">
                                    <StackPanel>
                                        <TextBlock Text="Estado del proceso" Style="{StaticResource CaptionStyle}" />
                                        <TextBlock Text="{Binding StatusMessage, TargetNullValue='Todo listo para generar reportes'}"
                                                   TextWrapping="Wrap"
                                                   Foreground="{StaticResource NeutralDarkBrush}"
                                                   Margin="0,6,0,0" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1"
                            Background="#FFFFFF"
                            CornerRadius="24"
                            Padding="28"
                            BorderBrush="{StaticResource SeparatorBrush}"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Notas rápidas"
                                       FontSize="17"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource NeutralDarkBrush}" />
                            <TextBlock Text="Documenta hallazgos clave o preguntas pendientes antes de compartir."
                                       Style="{StaticResource CaptionStyle}"
                                       Margin="0,6,0,20"
                                       TextWrapping="Wrap" />
                            <Border Background="#F8FAFF"
                                    CornerRadius="16"
                                    BorderBrush="{StaticResource SeparatorBrush}"
                                    BorderThickness="1"
                                    Padding="18">
                                <StackPanel>
                                    <TextBlock Text="• Revisa ingresos extraordinarios."
                                               Style="{StaticResource CaptionStyle}" />
                                    <TextBlock Text="• Confirma variaciones de inventario."
                                               Style="{StaticResource CaptionStyle}"
                                               Margin="0,6,0,0" />
                                    <TextBlock Text="• Agenda seguimiento con finanzas."
                                               Style="{StaticResource CaptionStyle}"
                                               Margin="0,6,0,0" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Background="#FFFFFF"
                        BorderBrush="{StaticResource SeparatorBrush}"
                        BorderThickness="1"
                        CornerRadius="18"
                        Padding="18"
                        Margin="0,28,0,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StatusMessage}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StatusMessage}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource NeutralDarkBrush}" />
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
